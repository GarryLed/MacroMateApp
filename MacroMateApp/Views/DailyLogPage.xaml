<Page x:Class="MacroMateApp.Views.DailyLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MacroMateApp.Views" xmlns:models="clr-namespace:MacroMateApp.Models" d:DataContext="{d:DesignInstance Type=models:DailyTotals}"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="800"
      Title="DailyLogPage">


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <!-- Header  -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,20">
            <TextBlock Text="Daily Food Log" FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="View your logged daily food below"
                    FontSize="16" FontStyle="Italic" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Add food item -->
        <StackPanel Grid.Row="2" Margin="10">
            <StackPanel Margin="20" Width="400" HorizontalAlignment="Center">
                <!-- Section Title -->
                <TextBlock Text="Add a Food Item" 
               FontSize="18" 
               FontWeight="Bold" 
               Margin="0,0,0,10"
               Foreground="Black"/>

                <!-- Food Name -->
                <TextBlock Text="Food Name:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding FoodName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Serving size -->
                <TextBlock Text="Serving size (g):" FontWeight="SemiBold"/>
                <TextBox Text="{Binding ServingSize, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Calories -->
                <TextBlock Text="Calories (kcal):" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Calories, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Protein -->
                <TextBlock Text="Protein (g):" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Protein, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Carbs -->
                <TextBlock Text="Carbohydrates (g):" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Carbs, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Fats -->
                <TextBlock Text="Fats (g):" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Fats, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Meal Selection -->
                <TextBlock Text="Meal Type:" FontWeight="SemiBold"/>
                <ComboBox SelectedValuePath="Content" SelectedValue="{Binding SelectedMeal}" Margin="0,0,0,10">
                    <ComboBoxItem Content="Breakfast"/>
                    <ComboBoxItem Content="Lunch"/>
                    <ComboBoxItem Content="Dinner"/>
                    <ComboBoxItem Content="Snacks"/>
                </ComboBox>

                    <!-- Add food button -->
                    <Button Content="Add Food" 
        Command="{Binding AddItemCommand}" 
        Background="{StaticResource CTAButtonBrush}" 
        Foreground="White"
        FontWeight="Bold"
        Height="35"/>

                </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="Logged Meals for today" FontSize="20" FontWeight="Bold"  Margin="20,20,20,20"/>
       
        <!-- Food Log sections  -->
        <TabControl Grid.Row="3" Margin="40">
            
            <!-- Breakfast -->
                <TabItem Header="Breakfast" FontWeight="Bold">
                <ListView ItemsSource="{Binding BreakfastLog}" Margin="5" SelectedItem="{Binding SelectedItem}">
                    <ListView.View>
                        <GridView>
                                <GridViewColumn Header="Food" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5, 5, 5, 5">
                                                <Image Source="{Binding ImageUrl}" Width="80" Height="80" Stretch="UniformToFill" />
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Serving Size"  DisplayMemberBinding="{Binding ServingSize}" Width="150"/>
                                <GridViewColumn Header="Calories" DisplayMemberBinding="{Binding Calories}" Width="150"/>
                            <GridViewColumn Header="Protein" DisplayMemberBinding="{Binding Protein}" Width="150"/>
                            <GridViewColumn Header="Carbs" DisplayMemberBinding="{Binding Carbs}" Width="150"/>
                            <GridViewColumn Header="Fats" DisplayMemberBinding="{Binding Fats}" Width="150"/>
                            <GridViewColumn Header="Delete Item" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- Using TabControl and AncestorType to find the nearest TabControl and then accesses its DataContext-->
                                        <!-- CommandParameter uses the current food items as a parameter when the button is clicked -->
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" CommandParameter="{Binding}"
                                                Background="{StaticResource DeleteButtonBrush}" 
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Height="35">
                                            </Button>
                                        </DataTemplate>
                                </GridViewColumn.CellTemplate>
                                
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <!-- Lunch -->
                <TabItem Header="Lunch" FontWeight="Bold">
                <ListView ItemsSource="{Binding LunchLog}" Margin="5" SelectedItem="{Binding SelectedItem}">
                    <ListView.View>
                        <GridView>
                                <GridViewColumn Header="Food" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5, 5, 5, 5">
                                                <Image Source="{Binding ImageUrl}" Width="80" Height="80" Stretch="UniformToFill" />
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Serving Size" DisplayMemberBinding="{Binding ServingSize}" Width="150"/>
                                <GridViewColumn Header="Calories" DisplayMemberBinding="{Binding Calories}" Width="150"/>
                            <GridViewColumn Header="Protein" DisplayMemberBinding="{Binding Protein}" Width="150"/>
                            <GridViewColumn Header="Carbs" DisplayMemberBinding="{Binding Carbs}" Width="150"/>
                            <GridViewColumn Header="Fats" DisplayMemberBinding="{Binding Fats}" Width="150"/>
                            <GridViewColumn Header="Delete Item" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- Using TabControl and AncestorType to find the nearest TabControl and then accesses its DataContext-->
                                        <!-- CommandParameter uses the current food items as a parameter when the button is clicked -->
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" CommandParameter="{Binding}"
                                                Background="{StaticResource DeleteButtonBrush}" 
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Height="35">
                                            </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <!-- Dinner -->
                <TabItem Header="Dinner" FontWeight="Bold">
                <ListView ItemsSource="{Binding DinnerLog}" Margin="5" SelectedItem="{Binding SelectedItem}">
                    <ListView.View>
                        <GridView>
                                <GridViewColumn Header="Food" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5, 5, 5, 5">
                                                <Image Source="{Binding ImageUrl}" Width="80" Height="80" Stretch="UniformToFill" />
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Serving Size" DisplayMemberBinding="{Binding ServingSize}" Width="150"/>
                                <GridViewColumn Header="Calories" DisplayMemberBinding="{Binding Calories}" Width="150"/>
                            <GridViewColumn Header="Protein" DisplayMemberBinding="{Binding Protein}" Width="150"/>
                            <GridViewColumn Header="Carbs" DisplayMemberBinding="{Binding Carbs}" Width="150"/>
                            <GridViewColumn Header="Fats" DisplayMemberBinding="{Binding Fats}" Width="150"/>
                            <GridViewColumn Header="Delete Item" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- Using TabControl and AncestorType to find the nearest TabControl and then accesses its DataContext-->
                                        <!-- CommandParameter uses the current food items as a parameter when the button is clicked -->
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" CommandParameter="{Binding}"
                                                Background="{StaticResource DeleteButtonBrush}" 
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Height="35">
                                            </Button>
                                        </DataTemplate>

                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>


            <!-- Snacks-->
                <TabItem Header="Snacks" FontWeight="Bold">
                <ListView ItemsSource="{Binding SnacksLog}" Margin="5" SelectedItem="{Binding SelectedItem}">
                    <ListView.View>
                        <GridView>
                                <GridViewColumn Header="Food" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5, 5, 5, 5">
                                                <Image Source="{Binding ImageUrl}" Width="80" Height="80" Stretch="UniformToFill" />
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Serving Size" DisplayMemberBinding="{Binding ServingSize}" Width="150"/>
                                <GridViewColumn Header="Calories" DisplayMemberBinding="{Binding Calories}" Width="150"/>
                            <GridViewColumn Header="Protein" DisplayMemberBinding="{Binding Protein}" Width="150"/>
                            <GridViewColumn Header="Carbs" DisplayMemberBinding="{Binding Carbs}" Width="150"/>
                            <GridViewColumn Header="Fats" DisplayMemberBinding="{Binding Fats}" Width="150"/>
                            <GridViewColumn Header="Delete Item" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- Using TabControl and AncestorType to find the nearest TabControl and then accesses its DataContext-->
                                        <!-- CommandParameter uses the current food items as a parameter when the button is clicked -->
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" CommandParameter="{Binding}"
                                                Background="{StaticResource DeleteButtonBrush}" 
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Height="35">
                                            </Button>
                                        </DataTemplate>
                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

        </TabControl>
        
        <!-- Display Daily totals -->
        <StackPanel Grid.Row="4" Margin="10">
            <TextBlock Text="Daily Totals" FontSize="20" FontWeight="Bold"  Margin="0,20,0,20"/>

            <TextBlock Text="Total Calories:" FontWeight="SemiBold" />
            <TextBlock Text="{Binding DailyTotals.TotalCalories}" Margin="5"/>

                <TextBlock Text="Protein (g)" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding DailyTotals.TotalProtein}" Margin="5"/>

                <TextBlock Text="Carbs (g)" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding DailyTotals.TotalCarbs}" Margin="5"/>

                <TextBlock Text="Fats (g)" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding DailyTotals.TotalFats}" Margin="5"/>
        </StackPanel>




        <!-- Buttons for quick navigation -->
        <StackPanel Grid.Row="5" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Quick Access" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>

            <WrapPanel HorizontalAlignment="Center" Margin="10">
                <Button Content="Food Search" Width="150" Height="40" Margin="5"
                     Command="{Binding NavigateToFoodSearchCommand}"/>
                
                <Button Content="Clear Log" Width="150" Height="40" Margin="5"
                     Command="{Binding ClearDailyLogCommand}"/>

            </WrapPanel>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Page>
