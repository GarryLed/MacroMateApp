<Page x:Class="MacroMateApp.Views.FoodSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MacroMateApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FoodSearchPage">

    <Grid Margin="20" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Text="Search for Food" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Search Bar Section -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,10">
            <TextBlock Text="Enter a food name:" FontSize="14" FontWeight="SemiBold" 
               Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="250" Height="30" 
                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 Padding="5"/>
                <Button Content="🔍 Search" Command="{Binding SearchCommand}" 
                Margin="10,0,0,0" Width="100" Height="30"/>
            </StackPanel>
        </StackPanel>


        <!-- Food Search Results -->
        <ListView Grid.Row="2" ItemsSource="{Binding FoodResults}" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Food Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Calories" DisplayMemberBinding="{Binding Calories}" Width="200"/>
                    <GridViewColumn Header="Protein (g)" DisplayMemberBinding="{Binding Protein}" Width="200"/>
                    <GridViewColumn Header="Carbs (g)" DisplayMemberBinding="{Binding Carbs}" Width="200"/>
                    <GridViewColumn Header="Fats (g)" DisplayMemberBinding="{Binding Fats}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        
    </Grid>
</Page>
