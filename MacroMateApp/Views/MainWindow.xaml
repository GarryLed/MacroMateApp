<Window x:Class="MacroMateApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroMateApp"
        mc:Ignorable="d"
        Title="MacroMate" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Nav bar -->
            <RowDefinition Height="*" /> <!-- main content -->

        </Grid.RowDefinitions>
        <!-- Main Nav -->
        <DockPanel Background="BlueViolet" Height="60" Grid.Row="0">
            <!--Logo --> 
            <TextBlock Text="MacroMate" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="20, 0, 10, 0"></TextBlock>
            
             <!-- Nav links -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Home" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigationHomeCommand}"></Button>
                <Button Content="Food Search" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigationFoodSearchCommand}"></Button>
                <Button Content="Daily Log" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigationDailyLogCommand}"></Button>
                <Button Content="Nutrient Goals" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigationGoalsCommand}"></Button>
                <Button Content="Settings" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigationSettingsCommand}"></Button>
                
            </StackPanel>
        </DockPanel>

         <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" />
    </Grid>
</Window>
