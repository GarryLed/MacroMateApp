<Window x:Class="MacroMateApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroMateApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Main Nav -->
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Left" Width="200" >
                <!-- Nav links -->
                <Button Content="Home" Height="50" Command="{Binding NavigationHomeCommand}"></Button>
                <Button Content="Food Search" Height="50" Command="{Binding NavigationFoodSearchCommand}"></Button>
                <Button Content="Daily Log" Height="50" Command="{Binding NavigationDailyLogCommand}"></Button>
                <Button Content="Settings" Height="50" Command="{Binding NavigationSettingsCommand}"></Button>
                
            </StackPanel>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
