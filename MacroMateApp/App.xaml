<Application x:Class="MacroMateApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MacroMateApp"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
       

      
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="LightBlue" SecondaryColor="Lime" />

                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                </ResourceDictionary.MergedDictionaries>

            <!-- Custome colour brushes -->
            <!-- App Background -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#EEF5F9"/>

                
            <!-- Sky Blue Navbar -->
            <SolidColorBrush x:Key="NavbarBackgroundBrush" Color="#3ABEF9"/>
                
            <!-- Dark Text -->
            <SolidColorBrush x:Key="TextBrush" Color="#1F2937" />


            <!-- CTA Buttons -->
            <SolidColorBrush x:Key="CTAButtonBrush" Color="#FBBF24" />
                
                <!-- Accent colours -->
            <SolidColorBrush x:Key="AccentBrush" Color="#34D399" />
                
                <!-- Delete Buttons -->
            <SolidColorBrush x:Key="DeleteButtonBrush" Color="#EF4444" />
            


        </ResourceDictionary>
   


    </Application.Resources>
</Application>
